FROM @@base_image@@

ENV GEOSUPPORT_BASEDIR=@@geosupport_basedir@@
RUN mkdir -p "$GEOSUPPORT_BASEDIR"
WORKDIR $GEOSUPPORT_BASEDIR

ENV GEOSUPPORT_BASEDIR="${GEOSUPPORT_BASEDIR:-/opt/geosupport}"
ENV GEOSUPPORT_HOME="${GEOSUPPORT_HOME:-${GEOSUPPORT_BASEDIR/current}}"
ENV GEOFILES="${GEOFILES:-${/opt/geosupport/current/fls/}}"
ENV GS_LIBRARY_PATH="${GS_LIBRARY_PATH:-${/opt/geosupport/current/lib}}"
ENV GS_INCLUDE_PATH="${GS_INCLUDE_PATH:-${/opt/geosupport/current/lib}}"

ARG GEOSUPPORT_RELEASE=@@geosupport_release@@
ARG GEOSUPPORT_MAJOR  =@@geosupport_major@@
ARG GEOSUPPORT_MINOR  =@@geosupport_minor@@
ARG GEOSUPPORT_PATCH  =@@geosupport_patch@@

# version-@@geosupport_major@@@@geosupport_release@@@@geosupport_patch@@_@@geosupport_major@@.@@geosupport_minor@@

VOLUME "${GEOSUPPORT_BASEDIR}"